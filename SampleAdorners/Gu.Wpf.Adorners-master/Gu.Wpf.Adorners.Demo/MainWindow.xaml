<Window x:Class="Gu.Wpf.Adorners.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Gu.Wpf.Adorners.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Watermark">
            <local:WatermarkView />
        </TabItem>

        <TabItem Header="Overlay">
            <local:OverlayView />
        </TabItem>

        <TabItem Header="Info">
            <local:InfoView />
        </TabItem>

        <TabItem Header="Password">
            <local:PasswordView />
        </TabItem>

        <TabItem Header="Drag">
            <local:DragAdornerView />
        </TabItem>

        <TabItem Header="Drag Template">
            <local:DragAdornerTemplateView />
        </TabItem>
        
        <TabItem Header="Debug">
            <local:DebugView />
        </TabItem>
    </TabControl>
</Window>
